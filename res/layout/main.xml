<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
	<LinearLayout android:id="@+id/bottom_tab" 
	    android:layout_alignParentBottom="true"
		android:layout_width="fill_parent" 
		android:layout_height="60dp"
		android:orientation="horizontal"
		android:gravity="center_vertical">
		<RelativeLayout 
		    android:id="@+id/menu_session"
		    android:layout_weight="1"
		    android:layout_width="wrap_content"
		    android:layout_height="fill_parent">
		   <CheckBox 
		       android:id="@+id/checkBox"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:button="@null"
			    android:background="@drawable/menu_session"/>
			<TextView 
			    android:id="@+id/txt_name"
			    android:layout_alignParentBottom="true"
			    android:layout_marginBottom="5dp"
			    android:gravity="center"
			    android:text="@string/MENU_SESSION"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"/>
			<ImageView 
			    android:id="@+id/img_ico"
			    android:paddingTop="10dp"
			    android:layout_above="@id/txt_name"
			    android:layout_centerHorizontal="true"
			    android:layout_width="40dp"
			    android:layout_height="40dp"
			    android:src="@drawable/ico_session_normal"/>
		</RelativeLayout>
		<RelativeLayout 
		    android:id="@+id/menu_contact"
		    android:layout_weight="1"
		    android:layout_width="wrap_content"
		    android:layout_height="fill_parent">
		   <CheckBox 
		       android:id="@+id/checkBox"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:button="@null"
			    android:background="@drawable/menu_contact"/>
			<TextView 
			    android:id="@+id/txt_name"
			    android:layout_alignParentBottom="true"
			    android:layout_marginBottom="5dp"
			    android:gravity="center"
			    android:text="@string/MENU_CONTACT"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"/>
			<ImageView 
			    android:id="@+id/img_ico"
			    android:paddingTop="10dp"
			    android:layout_above="@id/txt_name"
			    android:layout_centerHorizontal="true"
			    android:layout_width="40dp"
			    android:layout_height="40dp"
			    android:src="@drawable/ico_contact_normal"/>
		</RelativeLayout>
		<RelativeLayout 
		    android:id="@+id/menu_circle"
		    android:layout_weight="1"
		    android:layout_width="wrap_content"
		    android:layout_height="fill_parent">
		   <CheckBox 
		       android:id="@+id/checkBox"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:button="@null"
			    android:background="@drawable/menu_circle"/>
			<TextView 
			    android:id="@+id/txt_name"
			    android:layout_alignParentBottom="true"
			    android:layout_marginBottom="5dp"
			    android:gravity="center"
			    android:text="@string/MENU_CIRCLE"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"/>
			<ImageView 
			    android:id="@+id/img_ico"
			    android:paddingTop="10dp"
			    android:layout_above="@id/txt_name"
			    android:layout_centerHorizontal="true"
			   android:layout_width="40dp"
			    android:layout_height="40dp"
			    android:src="@drawable/ico_circle_normal"/>
		</RelativeLayout>
		<RelativeLayout 
		    android:id="@+id/menu_find"
		    android:layout_weight="1"
		    android:layout_width="wrap_content"
		    android:layout_height="fill_parent">
		   <CheckBox 
		       android:id="@+id/checkBox"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:button="@null"
			    android:background="@drawable/menu_find"/>
			<TextView 
			    android:id="@+id/txt_name"
			    android:layout_alignParentBottom="true"
			    android:layout_marginBottom="5dp"
			    android:gravity="center"
			    android:text="@string/MENU_FIND"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"/>
			<ImageView 
			    android:id="@+id/img_ico"
			    android:paddingTop="10dp"
			    android:layout_above="@id/txt_name"
			    android:layout_centerHorizontal="true"
			    android:layout_width="40dp"
			    android:layout_height="40dp"
			    android:src="@drawable/ico_find_normal"/>
		</RelativeLayout>
		<RelativeLayout 
		    android:id="@+id/menu_set"
		    android:layout_weight="1"
		    android:layout_width="wrap_content"
		    android:layout_height="fill_parent">
		   <CheckBox 
		       android:id="@+id/checkBox"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:button="@null"
			    android:background="@drawable/menu_set"/>
			<TextView 
			    android:id="@+id/txt_name"
			    android:layout_alignParentBottom="true"
			    android:layout_marginBottom="5dp"
			    android:gravity="center"
			    android:text="@string/MENU_MORE"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"/>
			<ImageView 
			    android:id="@+id/img_ico"
			    android:paddingTop="10dp"
			    android:layout_above="@id/txt_name"
			    android:layout_centerHorizontal="true"
			    android:layout_width="40dp"
			    android:layout_height="40dp"
			    android:src="@drawable/ico_set_normal"/>
		</RelativeLayout>
	</LinearLayout> 
     <LinearLayout 
        android:layout_above="@id/bottom_tab"
        android:id="@+id/container"  
        android:layout_width="fill_parent"  
        android:layout_height="fill_parent"
        android:background="@android:color/white">  
    </LinearLayout>  
</RelativeLayout>
