<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/linear_loading"
	android:layout_width="fill_parent" android:layout_height="wrap_content" android:background="@android:color/white"
	android:minHeight="?android:listPreferredItemHeight" xmlns:android="http://schemas.android.com/apk/res/android">
	<TextView android:layout_width="fill_parent" android:id="@+id/text_addmore"
		android:layout_height="wrap_content" android:textColor="@android:color/black" 
		android:text="查看更多..." android:gravity="center" android:textSize="16sp"/>
	<ProgressBar android:layout_width="wrap_content" android:id="@+id/progressBar"
		android:layout_height="wrap_content" android:layout_marginRight="4.0dip"
		style="@android:attr/progressBarStyleSmall" android:visibility="gone"/>
	<TextView android:textAppearance="?android:textAppearanceSmall" android:id="@+id/text_show"
		android:layout_width="wrap_content" android:layout_height="wrap_content" android:visibility="gone"
		android:text="@string/loading" android:textSize="16sp" android:textColor="@android:color/black"/>
</LinearLayout>