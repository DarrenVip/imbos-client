<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    >
    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent"
        android:gravity="center">
    <TextView 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:textAppearance="@android:style/TextAppearance.Small"
        style="@style/TextView"
        android:textColor="@android:color/white"
        android:background="@drawable/chatting_time_bg"
        android:layout_margin="2dp"
        android:id="@+id/txt_category"/>
    </LinearLayout>
    <LinearLayout  
        	android:id="@+id/p_chat"
        	android:layout_gravity="center_vertical"
		    android:orientation="horizontal"
        	android:layout_width="fill_parent" 
        	android:gravity="right"
		    android:layout_height="wrap_content">
    	<ImageView
		    android:id="@+id/img_face_left"
		    android:layout_marginTop="2dp"
		    android:layout_marginLeft="2dp"
			android:layout_marginRight="2dp"
			android:layout_width="52dp"
			android:layout_height="52dp"
			android:background="@drawable/card_head_bg"
			android:src="@drawable/default_face"/>
    	
		<LinearLayout 
		    android:id="@+id/p_inner"
		    android:layout_gravity="bottom"
		    android:layout_width="wrap_content" 
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    >
		   <ImageView
		    android:id="@+id/img_voice"
		    android:layout_gravity="center"
		    android:scaleType="center"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
		   <ImageView
		    android:id="@+id/img_image"
		    android:layout_gravity="center"
		    android:scaleType="fitXY"
			android:layout_width="100dp"
			android:layout_height="100dp"/>
		   <TextView android:id="@+id/txt_remark"
		        style="@style/TextView"
		        android:text=""
		        android:paddingTop="8dp"
		        android:paddingBottom="8dp"
		      	android:layout_width="0dp"
		      	android:layout_weight="1"
				android:layout_height="wrap_content"
				 />
		   <TextView android:id="@+id/txt_msg"
		        style="@style/TextView"
		        android:layout_gravity="center_vertical"
		        android:text=""
		      	android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				 />
		</LinearLayout>
		<ImageView
		    android:id="@+id/img_face_rigth"
		    android:layout_marginTop="2dp"
		    android:layout_marginLeft="2dp"
			android:layout_marginRight="2dp"
			android:layout_width="52dp"
			android:layout_height="52dp"
			android:background="@drawable/card_head_bg"
			android:src="@drawable/default_face"/>
	</LinearLayout>
</LinearLayout>
