<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="5dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:orientation="vertical"
        android:padding="10dp" >

        <include layout="@layout/emember_datail_title" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp"
            android:background="#E2E2E2" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <TextView
                android:id="@+id/txt_legal_person"
                style="@style/common_text_style"
                android:text="@string/EP_LEGAL_PERSON" />

            <TextView
                android:id="@+id/txt_scale"
                style="@style/common_text_style"
                android:text="@string/EM_DETAIL_SCALE" />

            <TextView
                android:id="@+id/txt_range"
                style="@style/common_text_style"
                android:text="@string/EM_DETAIL_SERVICEFIELD" />

            <TextView
                android:id="@+id/txt_industry"
                style="@style/common_text_style"
                android:text="@string/EM_DETAIL_INDUSTRY" />

            <TextView
                android:id="@+id/txt_dynamic"
                style="@style/common_text_style"
                android:text="@string/EM_DETAIL_DYNAMIC" />

            <TextView
                android:id="@+id/txt_address"
                style="@style/common_text_style"
                android:text="@string/EP_ADDRESS" />

            <TextView
                android:id="@+id/txt_zip"
                style="@style/common_text_style"
                android:text="@string/EP_ZIP" />
            
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/preference_last_item"
                android:clickable="true"
                android:gravity="center_vertical"
                android:paddingBottom="5dp"
                android:paddingTop="5dp" >

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="8dp"
                    android:text="相册"
                    android:textColor="#333"
                    android:textSize="17sp" />

                <LinearLayout
                    android:id="@+id/div_album"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/txt_name"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/head_img1"
                        android:layout_width="62dp"
                        android:layout_height="62dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/card_head_bg"
                        android:scaleType="fitXY" />

                    <ImageView
                        android:id="@+id/head_img2"
                        android:layout_width="62dp"
                        android:layout_height="62dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/card_head_bg"
                        android:scaleType="fitXY" />

                    <ImageView
                        android:id="@+id/head_img3"
                        android:layout_width="62dp"
                        android:layout_height="62dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/card_head_bg"
                        android:scaleType="fitXY" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/mm_submenu" />
            </RelativeLayout>

            <TextView
                android:id="@+id/txt_summary"
                style="@style/common_text_style"
                android:text="@string/EM_DETAIL_SUMMARY" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="bottom"
                android:layout_marginTop="5dp"
                android:id="@+id/layout_comments">
				<TextView android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:layout_weight="1"
                	android:text="咨询"
                	android:textSize="18sp"
                	android:textColor="#2BA4D2"/>
                <Button
                    android:id="@+id/btn_comments"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape"
                    android:drawableLeft="@drawable/ic_tip"
                    android:layout_margin="4dp"
                    android:paddingLeft="5dp"/>

                <Button
                    android:id="@+id/txt_praise"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape"
                    android:drawableLeft="@drawable/ic_laud"
                    android:layout_margin="4dp"
                    android:paddingLeft="5dp"/>

                <Button
                    android:id="@+id/txt_attention"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape"
                    android:drawableLeft="@drawable/ic_favorite"
                    android:layout_margin="4dp"
                    android:paddingLeft="5dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>